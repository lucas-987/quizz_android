<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.quizz.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_gameSelectionFragment"
            app:destination="@id/gameSelectionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_quizzManagementSelectionFragment"
            app:destination="@id/quizzManagementSelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameSelectionFragment"
        android:name="com.example.quizz.ui.GameSelectionFragment"
        android:label="fragment_game_selection"
        tools:layout="@layout/fragment_game_selection" >
        <action
            android:id="@+id/action_gameSelectionFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.quizz.ui.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_gameScoreFragement"
            app:destination="@id/gameScoreFragement" />
        <action
            android:id="@+id/action_gameFragment_to_gameShowAnswerFragment"
            app:destination="@id/gameShowAnswerFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameScoreFragement"
        android:name="com.example.quizz.ui.GameScoreFragement"
        android:label="fragment_game_score"
        tools:layout="@layout/fragment_game_score" >
        <action
            android:id="@+id/action_gameScoreFragement_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameShowAnswerFragment"
        android:name="com.example.quizz.ui.GameShowAnswerFragment"
        android:label="fragment_game_show_answer"
        tools:layout="@layout/fragment_game_show_answer" />
    <fragment
        android:id="@+id/quizzManagementSelectionFragment"
        android:name="com.example.quizz.ui.QuizzManagementSelectionFragment"
        android:label="fragment_quizz_management_selection"
        tools:layout="@layout/fragment_quizz_management_selection" >
        <action
            android:id="@+id/action_quizzManagementSelectionFragment_to_quizzManagementFragment"
            app:destination="@id/quizzManagementFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizzManagementFragment"
        android:name="com.example.quizz.ui.QuizzManagementFragment"
        android:label="fragment_quizz_management"
        tools:layout="@layout/fragment_quizz_management" >
        <action
            android:id="@+id/action_quizzManagementFragment_to_questionEditorFragment"
            app:destination="@id/questionEditorFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionEditorFragment"
        android:name="com.example.quizz.ui.QuestionEditorFragment"
        android:label="fragment_question_editor"
        tools:layout="@layout/fragment_question_editor" >
        <argument
            android:name="newQuestion"
            app:argType="boolean"
            android:defaultValue="true" />
        <action
            android:id="@+id/action_questionEditorFragment_to_quizzManagementFragment"
            app:destination="@id/quizzManagementFragment" />
    </fragment>
</navigation>