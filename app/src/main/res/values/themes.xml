<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kobe</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mikado_yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color -->
        <!-- Customize your theme here. -->
    </style>

    <style name="button">
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="title1">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title3">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cardMainText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="editText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fabAdd">
        <item name="maxImageSize">40dp</item>
        <item name="tint">@color/white</item>
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>
</resources>